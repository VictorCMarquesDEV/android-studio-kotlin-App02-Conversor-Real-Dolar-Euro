<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_reais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Insira um valor em Reais"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="CONVERTER"
        app:layout_constraintEnd_toEndOf="@+id/edit_reais"
        app:layout_constraintTop_toBottomOf="@+id/edit_reais" />

    <TextView
        android:id="@+id/text_dolares"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Dólares:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/button_converter"
        app:layout_constraintTop_toBottomOf="@+id/button_converter" />

    <TextView
        android:id="@+id/text_euros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="104dp"
        android:fontFamily="sans-serif-black"
        android:text="Euros:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/button_converter"
        app:layout_constraintTop_toBottomOf="@+id/button_converter" />

    <TextView
        android:id="@+id/valor_dolares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="US$ 00,00"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/text_dolares"
        app:layout_constraintTop_toBottomOf="@+id/text_dolares"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/valor_euros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="€ 00,00"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/text_euros"
        app:layout_constraintTop_toBottomOf="@+id/text_euros" />

</androidx.constraintlayout.widget.ConstraintLayout>